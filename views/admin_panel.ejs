<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="h4">Admin Panel</h2>
  <form method="POST" action="/admin-logout">
    <button class="btn btn-outline-secondary btn-sm">Logout</button>
  </form>
</div>

<!-- Quick Links -->
<div class="row mb-4">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm text-center">
      <div class="card-body">
        <h5 class="card-title">View Orders</h5>
        <p class="card-text small">See all customer orders and transactions.</p>
        <a href="/admin/orders" class="btn btn-brand btn-sm">Go to Orders</a>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm text-center">
      <div class="card-body">
        <h5 class="card-title">View Users</h5>
        <p class="card-text small">See all registered users on the platform.</p>
        <a href="/admin/users" class="btn btn-brand btn-sm">Go to Users</a>
      </div>
    </div>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="h6 mb-3">Add Product</h3>
        <form method="POST" action="/admin/products">
          <div class="mb-2">
            <label class="form-label">Name</label>
            <input class="form-control" name="name" required />
          </div>
          <div class="mb-2">
            <label class="form-label">Image URL</label>
            <input class="form-control" name="imageUrl" />
          </div>
          <div class="mb-2">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="2"></textarea>
          </div>
          <div class="mb-2">
            <label class="form-label">Secret Info</label>
            <textarea class="form-control" name="secretInfo" rows="2" required></textarea>
          </div>
          <div class="row">
            <div class="col-md-6 mb-2">
              <label class="form-label">Country</label>
              <input class="form-control" name="country" required />
            </div>
            <div class="col-md-6 mb-2">
              <label class="form-label">Platform</label>
              <input class="form-control" name="platform" required />
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Price (NGN)</label>
            <input type="number" min="0" step="0.01" class="form-control" name="price" />
          </div>
          <button class="btn btn-brand w-100">Add</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-lg-7">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="h6 mb-3">All Products</h3>
        <div class="table-responsive">
          <table class="table table-sm align-middle">
            <thead>
              <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Platform</th>
                <th>Price</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(p => { %>
                <tr>
                  <td><%= p.name %></td>
                  <td><%= p.country %></td>
                  <td><%= p.platform %></td>
                  <td>â‚¦<%= (p.price || 0).toFixed(2) %></td>
                  <td><%= p.isSold ? 'Sold' : 'Available' %></td>
                  <td class="text-end">
                    <form method="POST" action="/admin/products/<%= p._id %>/delete" onsubmit="return confirm('Delete this product?');">
                      <button class="btn btn-outline-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
